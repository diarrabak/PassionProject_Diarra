@model PassionProjectMVP_Diarra.Models.ModelViews.EditPupil

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Pupil</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.pupil.pId)

    <div class="form-group">
        @Html.LabelFor(model => model.pupil.firstName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.pupil.firstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pupil.firstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.pupil.lastName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.pupil.lastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pupil.lastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.pupil.age, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.pupil.age, new { htmlAttributes = new { @class = "form-control" } });
            @Html.ValidationMessageFor(model => model.pupil.age, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.pupil.classId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="pupil.classId">
                @foreach (var classe in Model.allClasses)
                {
                    string selected = "";
                    if (Model.pupil.classId == classe.classId)
                    {
                        selected = "";
                    }
                    <option value="@classe.classId" @selected>@classe.className</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.pupil.locId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="pupil.locId">
                @foreach (var location in Model.allLocations)
                {
                    string selected = "";
                    if (Model.pupil.locId == location.locId)
                    {
                        selected = "";
                    }
                    <option value="@location.locId" @selected>@location.country </option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Pupil List", "PupilList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
